<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition=" '$(OS)' == 'Windows_NT' ">
    <PackageTargetFrameworks>net6</PackageTargetFrameworks>
    <DemoAppTargetFrameworks>net6</DemoAppTargetFrameworks>
    <TestTargetFrameworks>net6</TestTargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(OS)' != 'Windows_NT' ">
    <PackageTargetFrameworks>net6</PackageTargetFrameworks>
    <DemoAppTargetFrameworks>net6</DemoAppTargetFrameworks>
    <TestTargetFrameworks>net6</TestTargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <AvaloniaVersion>11.0.0-rc1.1</AvaloniaVersion>
    <DemoAvaloniaVersion>11.0.0-rc1.1</DemoAvaloniaVersion>
    <EnableAvaloniaEdit>enabled</EnableAvaloniaEdit>
    <AvaloniaEditVersion>11.0.0-rc1.1</AvaloniaEditVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(AVA_VER)' != '' ">
    <TestAvaloniaVersion>$(AVA_VER)</TestAvaloniaVersion>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(AVA_VER)' == '' ">
    <TestAvaloniaVersion>$(AvaloniaVersion)</TestAvaloniaVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageVersion>11.0.0-d1</PackageVersion>
  </PropertyGroup>

</Project>


